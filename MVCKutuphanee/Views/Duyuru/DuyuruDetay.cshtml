@model MVCKutuphanee.Models.Entity.TBLDUYURULAR

@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Duyuru Detayları</title>
<br />
<h2>Duyuru Detayları</h2>
<br />
@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @*@@Html.LabelFor(k => k.ADI)*@
        <label>DUYURU KATEGORİ</label>
        @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control" })
        <br />
        <label>DUYURU İÇERİĞİ</label>
        @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control" })
        <br />
        <label>DUYURU TARİHİ</label>
        @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
