@using MVCKutuphanee.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>
@using (Html.BeginForm("Index","Kitap",FormMethod.Get))
{
<div style="margin-top:15px; margin-bottom:15px;">
    <b>Aranacak Kitap Adını Girin: &nbsp</b> @Html.TextBox("p")
    <input type="submit" value="Ara"/>
</div>
}
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kitap Adı</td>
        <td>Kitap Yazarı</td>
        <td>Kategorisi</td>
        <td>Basım Yılı</td>
        <td>Yayınevi</td>
        <td>Sayfa Sayısı</td>
        <td>Durum</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.ADI</td>
            <td>@k.BASIMYIL</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Kitap/KitapEkle/">Yeni Kitap Ekle</a>
