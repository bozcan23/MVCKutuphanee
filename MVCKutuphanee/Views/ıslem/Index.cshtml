@using MVCKutuphanee.Models.Entity
@model List<TBLHAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-top:15px; margin-bottom:15px;">
        <b>Aranacak Kitap Adını Girin: &nbsp</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}
<table class="table table-bordered">
    <tr>
        <td>İşlem ID</td>
        <td>Kitap Adı</td>
        <td>Üye</td>
        <td>Personel</td>
        <td>Alış Tarihi</td>
        <td>İade Tarihi</td>
        <td>İade Al</td>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKITAP.AD</td>
            <td>@k.TBLUYELER.AD&nbsp @k.TBLUYELER.SOYAD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/OduncIade/@k.ID" class="btn btn-default" style="background-color:#ffd800">Detaylar</a></td>
        </tr>
    }
</table>


